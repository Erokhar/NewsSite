extends layoutLogged

block content
    div(style="margin-top:50px;margin-left:150px;text-align:center")#login.container
        legend: strong.text-info #{title}
    div(style="margin-top:50px;margin-left:150px;")#login.container
            h3(style="color:#1a1a1b") #{newsContent}
    div(style="margin-bottom:50px;margin-top:50px;margin-left:150px;display:flex")
        form(action="/news/likeNews", method="post" style="margin-right:5px")
            input(type="submit", value=`Like ${likesSize}`).btn.btn-primary.action-button
        form(action="/news/dislikeNews", method="post" style="margin-left:5px") 
            input(type="submit", value=`Dislike ${dislikesSize}`).btn.btn-primary.action-button